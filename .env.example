# Document Generator Backend - Environment Variables
# Rename this file to .env and update the values for production

# Security
DJANGO_SECRET_KEY=your-super-secret-production-key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database (if using something other than SQLite)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# SSL (set to true if using HTTPS)
DJANGO_SECURE_SSL_REDIRECT=False
